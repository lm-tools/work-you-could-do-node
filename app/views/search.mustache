{{<layout}}

{{$applicationContent}}
<h2 class="heading-xlarge">Find information on roles</h2>

<form action="{{basePath}}/{{accountId}}/search" method="GET" id="search-form">
    <div class="form-group">
        <label class="form-label" for="query">
            <span class="heading-small">Roles, skills and interests</span>
            {{^searchResults}}
            <span class="form-hint">e.g. <span class="example">Retail</span></span>
            {{/searchResults}}
        </label>
        <input type="text" name="query" id="query" class="form-control"
               title="Work, skills and interests"
               value="">
        <input type="submit" class="button" value="Search" data-test="search">
    </div>
</form>

{{#query}}
  {{#searchResults}}
  <a href="{{basePath}}/{{accountId}}/occupations/{{soc}}" class="search-result">
    <h4 class="bold-small">
      {{title}}
    </h4>
    <p>{{description}}</p>
  </a>
  {{/searchResults}}
{{/query}}

{{/applicationContent}}

{{/layout}}
